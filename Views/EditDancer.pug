extends layout

block content
  h1 Edit Dancer
  form(action=`/dancers/${dancer._id}?_method=PATCH`, method='POST')
    div
      label(for='username') Username:
      input(type='text', name='username', id='username', value=dancer.username, required)
    div
      label(for='age') Age:
      input(type='number', name='age', id='age', value=dancer.age, required)
    div
      button(type='submit') Update Dancer
